# Ensure old aliases don't interfere
unalias ytaudio 2>/dev/null
unalias ytpt 2>/dev/null

# Download audio only, clean up \ characters
ytaudio() {
  local cleaned="${1//\\}"
  yt-dlp -x --audio-format mp3 --no-playlist "$cleaned"
}

# Download + transcribe (Portuguese → SRT)
ytpt() {
  local cleaned="${1//\\}"

  # 1. Download only audio
  yt-dlp -x --audio-format mp3 --no-playlist "$cleaned"

  # 2. Select the most recently downloaded mp3
  local file
  file=$(ls -t *.mp3 | head -1)

  # 3. Run Whisper to create an SRT next to the MP3
  "$HOME/dev/whisper.cpp/build/bin/whisper-cli" \
    -m "$HOME/dev/whisper.cpp/models/ggml-large-v3-turbo.bin" \
    -l pt \
    -osrt \
    -f "$file"
}

trim2h() {
  # $1 = input filename
  local infile="$1"
  local ext="${infile##*.}"
  local base="${infile%.*}"

  # Output name will be: filename-2h.ext
  local outfile="${base}-2h.${ext}"

  echo "Trimming first 2 hours of: $infile"
  echo "Saving to: $outfile"

  # Try lossless copy first (instant)
  if ffmpeg -i "$infile" -t 01:59:58 -c copy "$outfile" 2>/dev/null; then
    echo "Done (lossless)."
  else
    echo "Lossless copy failed — re-encoding..."
    ffmpeg -i "$infile" -t 02:00:00 -acodec libmp3lame -b:a 128k "$outfile"
    echo "Done (re-encoded)."
  fi
}
trimsrt2h() {
  local infile="$1"
  local base="${infile%.*}"
  local outfile="${base}-2h.srt"

  awk '
    # Stop when the start time exceeds 02:00:00
    /^([0-9]{2}):([0-9]{2}):([0-9]{2}),/ {
      split($1, t, "[:,]")
      hour = t[1] + 0
      if (hour >= 2) exit
    }
    { print }
  ' "$infile" > "$outfile"

  echo "Created: $outfile"
}
rtp_srt() {
  local url="$1"

  # Download video
  yt-dlp "$url"

  local video
  video=$(ls -t *.mp4 *.mkv *.webm 2>/dev/null | head -1)

  # Try RTP subtitles first
  yt-dlp \
    --write-subs \
    --sub-format vtt \
    --convert-subs srt \
    --skip-download \
    "$url"

  # If no SRT was created, fall back to Whisper
  if ! ls *.srt >/dev/null 2>&1; then
    echo "No RTP subtitles found — running Whisper..."
    ffmpeg -i "$video" -vn -acodec mp3 temp-audio.mp3

    whispercpp \
      -m ~/dev/whisper.cpp/models/ggml-large-v3-turbo.bin \
      -f temp-audio.mp3 \
      -l pt \
      -osrt

    mv temp-audio.mp3.srt "${video%.*}.srt"
    rm temp-audio.mp3
  fi

  echo "Done: $video + ${video%.*}.srt"
}
